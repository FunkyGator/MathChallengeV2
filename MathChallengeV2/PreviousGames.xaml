<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MathChallengeV2.PreviousGames"
             BackgroundImageSource="bg.jpg"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollView>
            <VerticalStackLayout
                Padding="50, 100, 50, 50">
                <Grid ColumnDefinitions="*, *, *, 70"
                           RowDefinitions="50">
                    <Label Grid.Column="0" Text="Date" FontSize="32" FontAttributes="Bold"/>
                    <Label Grid.Column="1" Text="Type" FontSize="32" FontAttributes="Bold"/>
                    <Label Grid.Column="2" Text="Score" FontSize="32" FontAttributes="Bold"/>
                </Grid>
                <CollectionView x:Name="gamesList">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*, *, *, 70"
                                  RowDefinitions="50">

                                <Label Grid.Column="0" Text="{Binding DatePlayed, StringFormat='{0:d}'}"
                                       FontSize="32" />
                                <Label Grid.Column="1" Text="{Binding Type}"
                                       FontSize="32" />
                                <StackLayout Grid.Column="2" Orientation="Horizontal" Spacing="5">
                                    <Label Text="{Binding Score}"
                                       FontSize="32" />
                                    <Label Text="out of"
                                       FontSize="32"/>
                                    <Label Text="{Binding NumberOfQuestions}"
                                       FontSize="32" />
                                </StackLayout>
                                <ImageButton
                                    Source="trash.png"
                                    BackgroundColor="Blue"
                                    Grid.Column="3"
                                    Clicked="OnDelete"
                                    BindingContext="{Binding Id}"
                                    MinimumHeightRequest="40"
                                    MinimumWidthRequest="70" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>
        <Button
        Grid.Row="1"
        BackgroundColor="ForestGreen"
        BorderWidth="5"
        BorderColor="DarkBlue"
        Text="Back To Menu"
        Clicked="OnBackToMenu"
        HorizontalOptions="Center"
        MaximumHeightRequest="55"
        FontSize="32"/>
    </Grid>
</ContentPage>